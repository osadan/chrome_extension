{
  
  "manifest_version": 2,

  "name": "t2k",
  
  "description": "This extension helps use timetoknow products.",
  
  "version": "1.0.3",

  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title" : "t2k"
  },
  
  "background" : {
    "scripts" : ["background.js"],
    "persistent" : false
  },
  
  "content_scripts" : [
    {
      "matches" : ["http://*/*","https://*/*"],
      "js" : ["content.js"],
      "run_at" :     "document_start",
      "all_frames": false
    }
  ],

  "permissions": [
    "tabs",
    "http://*/*", 
    "https://*/*"
   ]
}
